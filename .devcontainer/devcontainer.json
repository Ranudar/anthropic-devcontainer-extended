{
  "name": "Claude Code + Repo Prompt MCP + Dev Browser + Flow-Next",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--shm-size=2gb",
    "--ipc=host"
  ],
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/node/.claude,type=bind",
    "source=claude-code-commandhistory,target=/commandhistory,type=volume"
  ],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "HISTFILE": "/commandhistory/.zsh_history",
    "REPOPROMPT_MCP_URL": "http://host.docker.internal:8096/sse",
    "PLAYWRIGHT_BROWSERS_PATH": "/ms-playwright",
    "UV_PYTHON_PREFERENCE": "managed"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-playwright.playwright",
        "charliermarsh.ruff",
        "ms-python.python"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": { "path": "bash", "icon": "terminal-bash" },
          "zsh": { "path": "zsh" }
        },
        "python.defaultInterpreterPath": "python3.14",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        }
      }
    }
  },
  "postCreateCommand": "sudo /usr/local/bin/init-firewall.sh && /usr/local/bin/setup-plugins.sh",
  "remoteUser": "node"
}
